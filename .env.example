# ==============================================================================
# First-Aid Buddy Bot - Environment Configuration
# ==============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ------------------------------------------------------------------------------
# Anthropic API Configuration
# ------------------------------------------------------------------------------
# Get your API key from: https://console.anthropic.com/
# Format: sk-ant-api03-...
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ------------------------------------------------------------------------------
# Application Configuration
# ------------------------------------------------------------------------------
# Environment: development, staging, production
ENVIRONMENT=development

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Application port (Streamlit default is 8501)
PORT=8501

# ------------------------------------------------------------------------------
# Rate Limiting
# ------------------------------------------------------------------------------
# Maximum queries per minute per user/session
RATE_LIMIT_PER_MINUTE=10

# Maximum queries per hour per user/session
RATE_LIMIT_PER_HOUR=100

# ------------------------------------------------------------------------------
# Input Validation
# ------------------------------------------------------------------------------
# Maximum input length (characters)
MAX_INPUT_LENGTH=500

# Minimum input length (characters)
MIN_INPUT_LENGTH=3

# ------------------------------------------------------------------------------
# Claude API Configuration
# ------------------------------------------------------------------------------
# Model to use for classification and generation
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# Maximum tokens for responses
MAX_TOKENS_CLASSIFICATION=10
MAX_TOKENS_GENERATION=1000

# API timeout (seconds)
API_TIMEOUT=30

# Number of retries on API failure
API_MAX_RETRIES=3

# ------------------------------------------------------------------------------
# RAG Configuration
# ------------------------------------------------------------------------------
# Number of documents to retrieve
TOP_K_DOCUMENTS=3

# Minimum relevance score for document retrieval
MIN_RELEVANCE_SCORE=0

# ------------------------------------------------------------------------------
# Caching
# ------------------------------------------------------------------------------
# Enable response caching (true/false)
ENABLE_CACHING=false

# Cache TTL in seconds (1 hour = 3600)
CACHE_TTL=3600

# ------------------------------------------------------------------------------
# Security
# ------------------------------------------------------------------------------
# Enable CSRF protection (should be true in production)
ENABLE_CSRF_PROTECTION=true

# Enable CORS (should be restricted in production)
ENABLE_CORS=false

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:8501

# ------------------------------------------------------------------------------
# Monitoring and Observability
# ------------------------------------------------------------------------------
# Enable detailed logging
ENABLE_DETAILED_LOGGING=false

# Enable performance metrics
ENABLE_METRICS=false

# Sentry DSN (for error tracking, optional)
# SENTRY_DSN=

# ------------------------------------------------------------------------------
# Regional Configuration
# ------------------------------------------------------------------------------
# Emergency services number (e.g., 999 for UK, 911 for US)
EMERGENCY_NUMBER=999

# Non-emergency number (e.g., 111 for UK NHS)
NON_EMERGENCY_NUMBER=111

# Country/Region (for localized content)
REGION=UK
